// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email        String  @unique
  hash         String
  refreshToken String?

  login String

  brushes    Int[] 
  references Int[] 
  tutorials  Int[] 
  programs   Int[] 

  @@map("users")
}

model Brush {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title       String @unique
  link        String
  description String
  program     String
  image       String

  @@map("brushes")
}

model Reference {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title   String @unique
  hashtag String
  image   String

  @@map("references")
}

model Tutorial {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title       String @unique
  link        String
  description String
  difficulty  String
  duration    String
  author      String
  image       String

  @@map("tutorials")
}

model Program {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String @unique
  link        String
  systems     String
  description String
  logo        String
  site        String?
  pluses      String
  minuses     String
  examples    String

  @@map("programs")
}
